<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_login"
    android:orientation="vertical"
   >
    <RelativeLayout
        android:id="@+id/rv_layout_list"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:padding="10dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/img_list"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/picture"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp" />

        <TextView
            android:id="@+id/profile_name_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/img_list"
            android:layout_toEndOf="@id/img_list" />

        <TextView
            android:id="@+id/profile_number_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="number"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/img_list"
            android:layout_toEndOf="@id/img_list"
            android:layout_below="@id/profile_name_list"/>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>